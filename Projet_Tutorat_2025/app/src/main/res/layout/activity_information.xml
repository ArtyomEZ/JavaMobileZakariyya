<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header with Text and Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A3D6A7"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations Personnelles"
            android:textSize="20sp"
            android:textColor="#000" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fsi"
            android:contentDescription="Profile Image"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Étudiant -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Étudiant"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <!-- Ligne de séparation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginVertical="16dp" />

            <!-- Maître d'apprentissage -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maître d'apprentissage"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_nom_maitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_prenom_maitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_tel_maitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <!-- Ligne de séparation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginVertical="16dp" />

            <!-- Entreprise -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entreprise"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_nom_entreprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_adresse_entreprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour" />

    <!-- Back button -->
</LinearLayout>
